@model List<Vote>

<h2>Pending Votes</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table">
    <thead>
        <tr><th>Voter ID</th><th>Candidate</th></tr>
    </thead>
    <tbody>
        @{
            var v = Model.FirstOrDefault(v => v.VoterId == User.Identity?.Name && !v.IsCommitted);
            <tr>
                <td>@v.VoterId</td>
                <td>@v.Candidate</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" asp-controller="Voting">Back to Blockchain</a>
