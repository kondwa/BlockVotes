@model List<Block>

<h2>Blockchain</h2>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<div class="d-flex justify-content-end">
    <form method="post" action="/Voting/Close">
        <button type="submit" class="btn btn-outline-danger">Close Vote</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Index</th>
            <th>Votes</th>
            <th>Hash</th>
            <th>Prev Hash</th>
            <th>Mining Time (s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var block in Model)
        {
            <tr>
                <td>@block.Index</td>
                <td>
                    <ul>
                        @foreach (var v in block.Votes)
                        {
                            <li>@v.VoterId - @v.Candidate</li>
                        }
                    </ul>
                </td>
                <td>@block.Hash</td>
                <td>@block.PreviousHash</td>
                <td>@block.MiningTimeSeconds.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<form method="post" action="/Voting/CastVote">
    <div class="form-check">
        <input type="radio" name="candidate" placeholder="Candidate" value="Mutharika" id="pm" class="form-check-input" required />
        <label for="pm" class="form-check-label">Mutharika</label>
    </div>
    <div class="form-check">
        <input type="radio" name="candidate" placeholder="Candidate" value="Kabambe" id="dk" class="form-check-input" required />
        <label for="dk" class="form-check-label">Kabambe</label>
    </div>
    <div class="form-check">
        <input type="radio" name="candidate" placeholder="Candidate" value="Chakwera" id="lc" class="form-check-input" required />
        <label for="lc" class="form-check-label">Chakwera</label>
    </div>
    <button class="btn btn-primary" type="submit">Cast Vote</button>
</form>
